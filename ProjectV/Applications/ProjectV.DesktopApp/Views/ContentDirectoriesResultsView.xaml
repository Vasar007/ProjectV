<UserControl x:Class="ProjectV.DesktopApp.Views.ContentDirectoriesResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:ProjectV.DesktopApp.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance viewModels:ContentDirectoriesResultsViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <ScrollViewer>
        <StackPanel>
            <Button Content="{materialDesign:PackIcon Floppy}"
                    Style="{StaticResource ResourceKey=MaterialDesignFloatingActionMiniSecondaryButton}"
                    ToolTip="Save contents to file"
                    Margin="16"
                    HorizontalAlignment="Center"
                    x:Name="SaveContentDirectoryButton" />

            <ContentControl Content="{Binding Path=ContentDirectoryResult}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.CanContentScroll="False" />
        </StackPanel>
    </ScrollViewer>

</UserControl>
